@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var usuarioActual = await UserManager.GetUserAsync(User);
    var nombreUsuario = usuarioActual.Nombres;
    <li>
        <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@nombreUsuario!</a>
    </li>
    <li style="margin-left:15px">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button class="btn btn-sm btn-outline-danger" type="submit">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
